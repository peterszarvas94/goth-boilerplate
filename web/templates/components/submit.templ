package components

type SubmitProps struct {
	Text string
}

templ Submit(props SubmitProps) {
	<div class="flex justify-center">
		<button
			type="submit"
			class="bg-black dark:bg-white dark:text-gray-900 hover:bg-gray-900 hover:dark:bg-gray-200 text-white font-bold py-2 px-4 rounded w-fit"
		>
			{ props.Text }
		</button>
	</div>
}
